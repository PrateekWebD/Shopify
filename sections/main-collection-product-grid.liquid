{% assign products = section.settings.product_list %}
{% for product in products %}
	{{product.title}}
	{% for image in product.images %}
		<a href="product.url"><img src="{{image | image_url}}"></a>
	{% endfor %}
{% endfor %}

{% schema %}
    {
        "name": "Customize",
        "settings": [
			{
                "type": "product_list",
                "id": "product_list",
                "label": "Products",
                "limit": 12
           	}
        ]
    }
{% endschema %}